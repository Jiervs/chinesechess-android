<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pimuseum.game.chinesechess">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/pi_chinese_chess"
        android:isGame="true"
        android:appCategory="game"
        android:label="@string/app_name"
        tools:ignore="GoogleAppIndexingWarning,UnusedAttribute">

        <activity
            android:name="com.pimuseum.game.chinesechess.ChessHomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.pimuseum.game.chinesechess.ChessVersusActivity"
            android:theme="@style/HomeTheme"
            android:screenOrientation="portrait">

        </activity>

    </application>

</manifest>
